@model EmployeeModel
@{
	ViewData["Title"] = "Add Employee";
}
@if (Context?.Session.GetString("username") != null){
<form method="post">
    <input hidden asp-for="Id" />
    <div class="form-group col-12">
        <label asp-for="Name"></label>
        <input asp-for="Name" placeholder="Enter name" class="form-control">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group  col-12">
        <label asp-for="Dept"></label>
        <input asp-for="Dept" placeholder="Enter department name" class="form-control">
        <span asp-validation-for="Dept" class="text-danger"></span>
    </div>
    <div class="form-group  col-12">
        <label asp-for="Salary"></label>
        <input asp-for="Salary" placeholder="Enter salary" class="form-control">
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-danger">Delete Employee</button>
</form>
}