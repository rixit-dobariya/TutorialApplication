@model List<Student>
@{
	int a = 0;
}
<div class="row">
	<div class="col-md-6">
		<h1>Students List</h1>
	</div>
	<div class="col-md-6 text-end">
		<a class="btn btn-primary" asp-action="Create">Add Student</a>
	</div>
</div>
<table class="table table-striped">
	<thead>
		<tr>
			<th>Sr. No</th>
			<th>Id</th>
			<th>Name</th>
			<th>Age</th>
			<th>Email</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		@foreach(var student in Model)
		{
			a++;
			<tr>
				<td>@a</td>
				<td>@student.Id</td>
				<td>@student.Name</td>
				<td>@student.Age</td>
				<td>@student.Email</td>
				<td>
					<a class="btn btn-dark" asp-action="Edit" asp-route-id="@student.Id">
						Edit
					</a>
					<a class="btn btn-danger" asp-action="Delete" asp-route-id="@student.Id">
						Delete
					</a>
				</td>
			</tr>
		}
	</tbody>
</table>