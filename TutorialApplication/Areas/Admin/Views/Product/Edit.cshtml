@model Product

<form method="post">
	<div class="border p-5 mt-4">
		<div class="row pb-2">
			<h2>
				Update product
				<hr />
			</h2>
		</div>
		<div class="row p-1 mb-2">
			<label asp-for="Title" class="p-0 mb-1"></label>
			<input asp-for="Title" class="form-control" />
			<span asp-validation-for="Title" class="text-danger"></span>
		</div>
		<div class="row p-1 mb-2">
			<label asp-for="Author" class="p-0 mb-1"></label>
			<input asp-for="Author" class="form-control" />
			<span asp-validation-for="Author" class="text-danger"></span>
		</div>
		<div class="row p-1 mb-2">
			<label asp-for="ISBN" class="p-0 mb-1"></label>
			<input asp-for="ISBN" class="form-control" />
			<span asp-validation-for="ISBN" class="text-danger"></span>
		</div>
		<div class="row p-1 mb-2">
			<label asp-for="Description" class="p-0 mb-1"></label>
			<input asp-for="Description" class="form-control" />
			<span asp-validation-for="Description" class="text-danger"></span>
		</div>
		<div class="row p-1 mb-2">
			<label asp-for="ListPrice" class="p-0 mb-1"></label>
			<input asp-for="ListPrice" class="form-control" />
			<span asp-validation-for="ListPrice" class="text-danger"></span>
		</div>
		<div class="row p-1 mb-2">
			<label asp-for="Price" class="p-0 mb-1"></label>
			<input asp-for="Price" class="form-control" />
			<span asp-validation-for="Price" class="text-danger"></span>
		</div>
		<div class="row p-1 mb-2">
			<label asp-for="Price50" class="p-0 mb-1"></label>
			<input asp-for="Price50" class="form-control" />
			<span asp-validation-for="Price50" class="text-danger"></span>
		</div>
		<div class="row p-1 mb-2">
			<label asp-for="Price100" class="p-0 mb-1"></label>
			<input asp-for="Price100" class="form-control" />
			<span asp-validation-for="Price100" class="text-danger"></span>
		</div>
		<div class="row p-1 mb-2">
			<label asp-for="CategoryId" class="p-0 mb-1"></label>
			<select asp-for="CategoryId" class="form-control" asp-items="@ViewBag.CategoryListItems"></select>
				<option disabled>Select Category</option>
			<span asp-validation-for="CategoryId" class="text-danger"></span>
		</div>
		<div class="row p-1 mb-2">
			<label asp-for="ImageUrl" class="p-0 mb-1"></label>
			<input asp-for="ImageUrl" class="form-control" />
			<span asp-validation-for="ImageUrl" class="text-danger"></span>
		</div>
		<div class="row">
			<div class="col-6">
				<button type="submit" class="btn btn-secondary form-control">Update Product</button>
			</div>
			<div class="col-6">
				<a asp-controller="Product" asp-action="Index" class="btn btn-outline-info form-control">Go back to list</a>
			</div>
		</div
	</div>
</form>
@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}