
@model ProductVM

<form method="post" enctype="multipart/form-data">
	<div class="border p-5 mt-4">
		<div class="row pb-2">
			<h2>
				@(Model.Product.Id!=0? "Update" : "Create") product
				<hr />
			</h2>
		</div>
		<input hidden asp-for="Product.Id" />
		<input hidden asp-for="Product.ImageUrl" />
		<div class="row p-1 mb-2">
			<label asp-for="Product.Title" class="p-0 mb-1"></label>
			<input asp-for="Product.Title" class="form-control" />
			<span asp-validation-for="Product.Title" class="text-danger"></span>
		</div>
		<div class="row p-1 mb-2">
			<label asp-for="Product.Author" class="p-0 mb-1"></label>
			<input asp-for="Product.Author" class="form-control" />
			<span asp-validation-for="Product.Author" class="text-danger"></span>
		</div>
		<div class="row p-1 mb-2">
			<label asp-for="Product.ISBN" class="p-0 mb-1"></label>
			<input asp-for="Product.ISBN" class="form-control" />
			<span asp-validation-for="Product.ISBN" class="text-danger"></span>
		</div>
		<div class="row p-1 mb-2">
			<label asp-for="Product.Description" class="p-0 mb-1"></label>
			<input asp-for="Product.Description" class="form-control" />
			<span asp-validation-for="Product.Description" class="text-danger"></span>
		</div>
		<div class="row p-1 mb-2">
			<label asp-for="Product.ListPrice" class="p-0 mb-1"></label>
			<input asp-for="Product.ListPrice" class="form-control" />
			<span asp-validation-for="Product.ListPrice" class="text-danger"></span>
		</div>
		<div class="row p-1 mb-2">
			<label asp-for="Product.Price" class="p-0 mb-1"></label>
			<input asp-for="Product.Price" class="form-control" />
			<span asp-validation-for="Product.Price" class="text-danger"></span>
		</div>
		<div class="row p-1 mb-2">
			<label asp-for="Product.Price50" class="p-0 mb-1"></label>
			<input asp-for="Product.Price50" class="form-control" />
			<span asp-validation-for="Product.Price50" class="text-danger"></span>
		</div>
		<div class="row p-1 mb-2">
			<label asp-for="Product.Price100" class="p-0 mb-1"></label>
			<input asp-for="Product.Price100" class="form-control" />
			<span asp-validation-for="Product.Price100" class="text-danger"></span>
		</div>
		<div class="row p-1 mb-2">
			<label asp-for="Product.CategoryId" class="p-0 mb-1"></label>
			<select asp-for="Product.CategoryId" class="form-control" asp-items="@Model.CategoryList"></select>
				<option disabled>Select Category</option>
			<span asp-validation-for="Product.CategoryId" class="text-danger"></span>
		</div>
		<div class="row p-1 mb-2">
			<div class="@(Model.Product.ImageUrl!=null ? "col-12" : "col-10")">
				<label asp-for="Product.ImageUrl" class="p-0 mb-1"></label>
				<input type="file" name="file" class="form-control" />
			</div>
			@if(Model.Product.ImageUrl!=null)
			{
				<div class="col-2">
					<img src="@Model.Product.ImageUrl" width="100%"  />
				</div>
			}
		</div>
		<div class="row">
			<div class="col-6">
				@if(Model.Product.Id!=0){
					<button type="submit" class="btn btn-dark form-control">Update Product</button>
				}
				else{
					<button type="submit" class="btn btn-dark form-control">Add  Product</button>
				}
			</div>
			<div class="col-6">
				<a asp-controller="Product" asp-action="Index" class="btn btn-outline-info form-control">Go back to list</a>
			</div>
		</div>
	</div>
</form>
@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}