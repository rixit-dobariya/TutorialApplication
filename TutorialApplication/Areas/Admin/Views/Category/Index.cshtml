@model List<Category>

<div class="row">
	<div class="col-6">
		<h1>Category List</h1>
	</div>
	<div class="col-6">
		<a class="btn btn-outline-primary" asp-controller="Category" asp-action="Create">Create New Category</a>
	</div>
</div>
<table class="table table-bordered table-stripped">
	<thead>
		<tr>
			<td>Category name</td>
			<td>Display Order</td>
			<td>Edit</td>
			<td>Delete</td>
		</tr>
	</thead>
	<tbody>
		@foreach(var obj in Model.OrderBy(u=>u.DisplayOrder))
		{
			<tr>
				<td>@obj.Name</td>
				<td>@obj.DisplayOrder</td>
				<td class="text-center">
					<a asp-controller="Category" asp-action="Edit" asp-route-categoryid="@obj.Id" class="btn btn-group btn-dark" role="group">
						<i class="bi bi-pencil-square"></i>  Edit
					</a>
				</td>
				<td class="text-center">
					<a asp-controller="Category"  asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-group btn-danger" role="group">
						<i class="bi bi-trash"></i>  Delete
					</a>
				</td>
			</tr>
		}
	</tbody>
</table>