@page
@model TutorialApplicationRazor.Pages.Categories.EditModel
<form method="post">
	<div class="border p-5 mt-4">
		<div class="row pb-2">
			<h2>
				Update category
				<hr />
			</h2>
		</div>
		<input hidden asp-for="Category.Id" />
		<div class="row p-1 mb-2">
			<label asp-for="Category.Name" class="p-0 mb-1"></label>
			<input asp-for="Category.Name" class="form-control" />
			<span asp-validation-for="Category.Name" class="text-danger"></span>
		</div>
		<div class="row p-1 mb-2">
			<label asp-for="Category.DisplayOrder" class="p-0 mb-1"></label>
			<input asp-for="Category.DisplayOrder" class="form-control" />
			<span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>
		</div>
		<div class="row">
			<div class="col-6">
				<button type="submit" class="btn btn-secondary form-control">Update Category</button>
			</div>
			<div class="col-6">
				<a asp-page="/Categories/Index" class="btn btn-outline-info form-control">Go back to list</a>
			</div>
		</div>
	</div>
</form>
@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}
