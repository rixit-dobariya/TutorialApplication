@model Student
@{
	ViewData["Title"] = "Add Student";
}
<div>
	<h2>Add Student</h2>
	<form method="post">
		<div class="form-group">
			<label asp-for="Name"></label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="ClassName"></label>
			<input asp-for="ClassName" class="form-control" />
			<span asp-validation-for="ClassName" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="percentage"></label>
			<input asp-for="percentage" class="form-control" />
			<span asp-validation-for="percentage" class="text-danger"></span>
		</div>
		<div class="form-group">
			<input type="submit" value="Add Student" name="submit" class="btn btn-primary"/>
		</div>
	</form>
</div>
@section Scripts{
	<partial name="_ValidationScriptsPartial" />
}